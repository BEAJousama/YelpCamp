<%- include('../partials/heading') -%>
    <a style="margin: 0px auto;" href="/campgrounds" class="btn btn-warning">Back to Campgrounds</a>

    <div class="container">
        <h1 style="text-align: center; margin :50px auto">Create a new compground</h1>
        <form action="/campgrounds" , method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="image url">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="description" placeholder="description">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </div>
        </form>
    </div>


    <%- include('../partials/footer') -%>