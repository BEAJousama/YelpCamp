<%- include('../partials/heading') -%>
    <a style="margin: 0px auto;" href="/campgrounds/<%=campground._id%>" class="btn btn-warning">Back to Campground</a>

    <div class="container">
        <h1 style="text-align: center; margin :50px auto">edit your comment to
            <strong><%=campground.name%></strong>
        </h1>
        <form action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=PUT" , method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </div>
        </form>
    </div>


    <%- include('../partials/footer') -%>